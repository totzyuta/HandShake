<LINK href="/css/mypage.css" rel="stylesheet" type="text/css">
<section class="myPage">
  <div class="firstContents">
    <!-- 上画面：告白していない -->
    <% if @target_img == "" %>

    <div class="anim-line"></div>
    <a href="/select">
      <div class="cover">
        <div class="line-out">
          <div class="line-in">
            <p>
              告白相手を選んでください
              <div class="triangle to-select1"></div>
              <div class="triangle to-select2"></div>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% end%>

    <% if @target_progress == "90%" %>
    <a href="/lovemax">
      <div class="cover">
        <div class="line-out">
          <div class="line-in">
            <p>
              本番告白に望みましょう
              <div class="triangle to-select1"></div>
              <div class="triangle to-select2"></div>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% end %>

    <% if @target_progress == "95%" %>
    <div class="cover">
      <div class="line-out">
        <div class="line-in">
          <p>
            最後の返事を待っています
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <% if @target_progress == "100%" %>
    <div class="cover">
      <div class="line-out">
        <div class="line-in">
          <p>
            祝・恋愛成就
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <!-- 上画面：告白している -->
    <p>
    <% if @target_img != "" %>
    <span class="strong">3</span>Days
    <% end %>
    </p>
    <div class="borderCircle circle1" <%= @target_circle1 %>></div>
    <div class="circle circle2" <%= @target_circle2 %>></div>
    <div class="borderCircle circle3" <%= @target_circle3 %>></div>
    <div class="circle circle4" <%= @target_circle4 %>></div>
    <div class="circle circle5" <%= @target_circle5 %>></div>
    <div class="borderCircle circle6" <%= @target_circle6 %>></div>
    <div class="borderCircle circle7" <%= @target_circle7 %>></div>
    <div class="circle circle8" <%= @target_circle8 %>></div>

    <!-- アニメーション用 -->
    <% if @target_img != "" %>
    <div class="anim1">
      <div class="anim-mask1">
        <div class="anim-circle"></div>
      </div>
    </div>
    <% end %>
    <div class="image">
      <div class="mask">
        <div class="face-out-circle">
          <% if @target_img == "" %>
          <a href="/select">
            <img src="/images/unknown.png">
          </a>
          <% else %>
          <a href="/conversation/to">
            <img src="<%= @target_img %>">
          </a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="slanting"></div>
    <div class="slanting2"></div>
    <div class="line"></div>
    <div class="strong pct">
    <div class="target_name">
      <h5><%= @target_name %></h5>
    </div>
      <p><%= @target_progress %></p>
    </div>
  </div>

  <div class="middleContents">
    <div class="image">
      <div class="face-out-circle">
        <img src="<%= @my_img %>">
      </div>
    </div>
  </div>

  <div class="secondContents">
    <!-- 下画面：告白されていない -->
    <% if @lover_img == "" %>
    <div class="cover">
      <div class="line-out">
        <div class="line-in">
          <p>
            告白されていません
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <% if @lover_progress == "90%" %>
    <div class="cover">
      <div class="line-out">
        <div class="line-in">
          <p>
            本番告白を待っています
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <% if @lover_progress == "95%" %>
    <a href="/return">
      <div class="cover">
        <div class="line-out">
          <div class="line-in">
            <p>
              最後の返事をしましょう
              <div class="triangle to-select1"></div>
              <div class="triangle to-select2"></div>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% end %>

    <% if @lover_progress == "100%" %>
      <div class="cover">
        <div class="line-out">
          <div class="line-in">
            <p>
              カップル成立
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 下画面：告白されている -->

    <!-- アニメーション用 -->
    <% if @lover_img != "" %>
    <div class="anim2">
      <div class="anim-mask2">
        <div class="anim-circle2"></div>
      </div>
    </div>
    <% end %>
    <div class="strong pct">
      <p><%= @lover_progress %></p>
    </div>
    <div class="borderCircle circle1" <%= @lover_circle1 %>></div>
    <div class="circle circle2" <%= @lover_circle2 %>></div>
    <div class="borderCircle circle3" <%= @lover_circle3 %>></div>
    <div class="circle circle4" <%= @lover_circle4 %>></div>
    <div class="borderCircle circle5" <%= @lover_circle5 %>></div>
    <div class="circle circle6" <%= @lover_circle6 %>></div>
    <div class="circle circle7" <%= @lover_circle7 %>></div>
    <div class="borderCircle circle8" <%= @lover_circle8 %>></div>
    <div class="image">
      <div class="mask">
        <div class="face-out-circle">
          <% if @lover_img == "" %>
            <img src="/images/unknown.png">
          <% else %>
          <a href="/conversation/from">
            <% if @lover_progress == "100%" %>
            <img src="<%= @lover_img %>">
            <% else %>
            <img src="/images/unknown.png">
            <% end %>
          </a>
          <% end %>
        </div>
      </div>
    <div class="slanting"></div>
    <div class="slanting2"></div>
    <div class="line"></div>
    <p><span class="strong">12</span>Hours</p>

  </div>
</section>
<script src="/js/jquery.easing.1.3.js"></script>
<script src="/js/mypage.js"></script>
