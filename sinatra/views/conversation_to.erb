<link href="/css/conversation.css" rel="stylesheet" type="text/css">
<div class="page">
  <div class="titleBar">
    <h3>Questions</h3>
    <p>You&nbsp;<span class="small">&#x25B6;&#x25B6;</span>&nbsp;<%= @target_name %><p>
    <div class="line"></div>
  </div>

  <% @conversations.each do |conv| %>
  <% @cid = conv[0] %>
  <div class="conversation">
    <h4>Question.</h4>
    <div class="wrapper">
      <div class="image">
        <div class="targetimg">
          <div class="face-out-circle">
            <img src="<%= @target_img %>">
          </div>
          <div class="slanting"></div>
          <div class="slanting2"></div>
          <div class="line"></div>
        </div>
        <div class="loverimg">
          <img class="loverimg" src="<%= @lover_img %>">
          <div class="slanting"></div>
          <div class="slanting2"></div>
          <div class="line"></div>
        </div>
      </div>

      <div class="question">
        <span><%= conv[1].force_encoding("utf-8") %></span>
      </div>
      <% if conv[4] == nil %>
        <% answer = 1 %>
      <% else %>
      <div class="answer">
        <span><%= conv[4].force_encoding("utf-8") %></span>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- 3回質問したら聞かない -->

  <!-- 告白した側：解答フォーム -->
  <div class="footer">
    <form action="/answer" method="post">
      <input type="hidden" name="conversation_id" value="<%= @cid %>">
      <input type="text" name="answer" class="text">
      <input type="submit" value="答える" class="button">
    </form>
  </div>

  <div class="conversation">
  </div>
</div>
