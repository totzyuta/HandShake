<section class="registeringPage">
<div class="firstContents">
    <section class="hero regist">
    <div class="image">
      <div class="face-out-circle">
        <img src="<%= @regist_img %>">
      </div>
    </div>
    <div class="forms">
    <form action="/useradd" method="post">
      <input type="name" class="form-control" id="Name" placeholder="Name" value="<%= @regist_name %>">
      <input type="email" class="form-control" id="Email" placeholder="Email" value="<%= @regist_email %>">
      <input type="submit">
    </form>
    </div>
    </section>
</div>

<div class="secondContents">
  <div style="text-align: center;">
    <h3>この内容で登録しますか？</h3>
    <div class="buttons">
      <a href="/mypage">
        <div class="button">登録</div>
      </a>
      <div class="button2">戻る</div>
    </div>
  </div>
</div>
</section>
